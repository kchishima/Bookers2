<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <table>
      <tbody>
         <tr> 
          <th>name</th>
	      <th><%= current_user.name %></th>
         </tr> 
         <tr>
	       <th>introduction</th>
	       <th><%= current_user. introduction %></th>
         </tr>
      </tbody>
    </table>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book,local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit '投稿' %>
    <% end %>
   
 </div>
<div class="col-md-9" >
  <h2>Book detail</h2>
  <table class="table">
    <thead>
        <tr>
            <th colspan="1"></th>
            <th>title</th>
            <th>opinion</th>
        </tr>
    </thead>      
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= attachment_image_tag @user, :profile_image %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            
        </tr>
        <% end %>
        
    </tbody>
  </table>
  </div>
 </div>
</div>