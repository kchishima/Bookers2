<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <img class="attachment user profile_image fallback" src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg">
    <table class="table">
      <tbody>
         <tr> 
          <th>name</th>
	      <th><%= current_user.name %></th>
         </tr> 
         <tr>
	       <th>introduction</th>
	       <th><%= current_user.introduction %></th>
         </tr>
      </tbody></table>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book,local:true do |f| %>
    <div class="form-group">
   <label for="book_title">Title</label>
    <%= f.text_field :title %>
    <label for="book_opinion">Opinion</label>
    <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
    
    <%= f.submit '投稿' %>
    <% end %>
    </div>
    
<div class="col-md-9" >
  <h2>Book detail</h2>
  <table class="table">
    <thead>
        <tr>
            <th colspan="1"></th>
            <th>title</th>
            <th>opinion</th>
        </tr>
    </thead>      
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= attachment_image_tag @user, :profile_image %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            
        </tr>
        <% end %>
        
    </tbody>
  </table>
  </div>
 </div>
</div>